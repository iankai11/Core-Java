package assignments;

import java.util.Scanner;

public class Assignment_4 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("enter the age of 1st person :");
		int a = sc.nextInt();
		
		System.out.println("enter the age of 2nd person :");
		int b = sc.nextInt();
		
		System.out.println("enter the age of 3rd person :");
		int c = sc.nextInt();
		
		if(a<b && a<c) {
			if(b>a && b>c) {
			
			System.out.println("2nd person is the oldest");
			System.out.println("1st person is the youngest");
			
			}if(c>a && c>b) {
				System.out.println("1st person is the youngest");
				System.out.println("3rd person is the oldest");
			
		}
		}
		if(b<a && b<c) {
			if(c>a && c>b) {
				System.out.println("3rd person is the oldest");
				System.out.println("2nd person is the youngest");
			}
			if(a>b && a>c) {
				
				System.out.println("1st person is the oldest");
				System.out.println("2nd person is the youngest");			
			
			}
		}
		if(c<a && c<b) {
			if(a>b && a>c) {
				
				System.out.println("1st person is the oldest");
			    System.out.println("3rd person is the youngest");
			
			} 
			if(b>a && b>c) {
				System.out.println("3rd person is the youngest");
				System.out.println("2nd person is the oldest");
				
			}
		}
	}
